<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvClienteNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Cliente"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Categoría"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFecha"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fecha"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvHora"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hora"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_estado_cita"
            android:padding="8dp"
            android:text="Estado"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageButton
                android:id="@+id/btnConfirmar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_button_confirm"
                android:contentDescription="Confirmar cita"
                android:src="@drawable/ic_check"
                android:tint="@android:color/white"
                android:visibility="gone"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/btnFinalizar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_button_finalize"
                android:contentDescription="Finalizar trabajo"
                android:src="@drawable/ic_done_all"
                android:tint="@android:color/white"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/btnVerUbicacion"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_button_outline"
                android:contentDescription="Ver ubicación"
                android:src="@drawable/ic_location"
                android:tint="@color/colorPrimary"
                android:visibility="gone"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
